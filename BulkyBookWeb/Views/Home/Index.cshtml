@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pd-3">
    @foreach(var data in Model)
    {
        
                 <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                        <img src="@data.Image" class="card-img-top rounded"/>
                        <div class="pl-1">
                            <p class="card-title h5 text-parimary">@data.Title</p>

                        </div>
                        <div class="pl-1">
                            <p>List Price:<strike><b>$@data.ListPrice.ToString("0.00")</b></strike></p>

                        </div> 
                        <div class="pl-1">
                            <p>As low as:<b>$@data.Price100.ToString("0.00")</b></p>

                        </div>
                    </div>

                </div>

        
       
        </div>
    }
</div>
