@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category Table</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Display Order</th>
      <th scope="col">Date Time</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      <a asp-action="Create" asp-controller="Category">Create New Category</a>
        @foreach(var obj in Model)
        {
                <tr>
          <th>@obj.Name</th>
          <td>@obj.DisplayOrder</td>
          <td>@obj.CreatedDate</td>
          <td>
                  <a asp-action="Edit" asp-controller="Category" asp-route-id = "@obj.Id" class="btn btn-warning">Edit</a>
                  <a asp-action="Delete" asp-controller="Category" asp-route-id = "@obj.Id" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        }
        
   
  </tbody>
</table>